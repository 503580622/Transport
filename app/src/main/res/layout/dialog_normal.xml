<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="180dp"
              android:background="@drawable/shape_dialog"
              android:layout_gravity="center"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:paddingTop="5dp"
              android:weightSum="1"
              android:orientation="vertical">


	<LinearLayout
		android:layout_width="match_parent"
		android:gravity="top"
		android:layout_height="wrap_content">

		<ImageView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:contentDescription=""
			android:background="@drawable/dialog_warning"
			android:id="@+id/imageView"/>

		<TextView
			android:id="@+id/jh_dialog_normal_title"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textColor="#ffffffff"
			android:textSize="20.0sp"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:layout_gravity="center_horizontal">

		<TextView
			android:id="@+id/jh_dialog_normal_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="15dp"
			android:textColor="#ffffffff"
			android:textSize="20.0sp"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/jh_btn_yes"
			android:layout_marginRight="15dp"
			android:layout_marginEnd="15dp"
			android:id="@+id/jh_dialog_btn_ok"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/jh_btn_no"
			android:layout_marginLeft="15dp"
			android:layout_marginStart="15dp"
			android:id="@+id/jh_dialog_btn_cancel"/>
	</LinearLayout>


</LinearLayout>