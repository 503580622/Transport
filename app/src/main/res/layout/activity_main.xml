<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/jh_main_activity_content"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".activity.MainAppCompatActivity">

	<include layout="@layout/activity_common_header" />

	<android.support.v4.view.ViewPager
		android:id="@+id/jh_main_activity_container"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<android.support.design.widget.TabLayout
		android:id="@+id/jh_main_activity_tabs"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		app:tabGravity="fill"
		app:tabMode="fixed"
		app:tabIndicatorHeight="0dp"
		app:tabSelectedTextColor="#FF4081"
		app:tabTextColor="#000"
		android:layout_gravity="bottom"/>

</LinearLayout>
