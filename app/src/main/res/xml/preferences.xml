<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:norprefer="http://schemas.android.com/apk/res/com.jiahelogistic">
	<SwitchPreference
		android:key="jh_settings_open_ads"
	    android:title="@string/jh_settings_show_ads"
	    android:summary="@string/jh_settings_show_ads_desc"
	    android:defaultValue="true"
		/>

	<com.jiahelogistic.preference.NormalPreference
		android:title="@string/jh_settings_clear_cache"
		norprefer:id="@+id/jh_normal_preference"
		norprefer:subTitle="20MB"/>

	<PreferenceCategory
		android:title="@string/jh_settings_common_label"
		android:key="pref_key_storage_settings">
		<CheckBoxPreference
			android:key="pref_key_auto_delete"
			android:summary="456"
			android:title="agd"
			android:defaultValue="false" />
		<Preference
			android:key="pref_key_sms_delete_limit"
			android:dependency="pref_key_auto_delete"
			android:summary="哈哈哈"
			android:title="嚯嚯嚯嚯"/>
		<Preference
			android:key="pref_key_mms_delete_limit"
			android:dependency="pref_key_auto_delete"
			android:summary="哟西哟而"
			android:title="测试用的" />
	</PreferenceCategory>
</PreferenceScreen>